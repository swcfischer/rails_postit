<% edit ||= false %>

<div class="well">
  <%= form_for @user do |f| %>
  <%= render 'shared/error', obj: @user %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <% unless edit %>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  <% end %>
  <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: "btn btn-success" %>
  <% end %>
</div>