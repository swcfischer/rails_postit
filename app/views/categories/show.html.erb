<% header = link_to("All Posts", posts_path) + " &raquo #{@category.name}".html_safe %>
<%= render "shared/content_title", title: header %>

<% @category.posts.each do |post| %>
 <div class="row">
   <div class="span8 well">
     <% post.categories.each do |category| %>
      <span class="badge"><%= category.name %></span>
     <% end %>
     <h4><%= link_to post.title, post_path(post) %></h4>
     <p><%= post.description %></p>
     <p>(<%= link_to 'Edit post', edit_post_path(post.id) %>)</p>
     <p>
       <span class="quiet">posted by</span> <%= @username %>
     </p>
     <small>
       <span>
         <%= link_to("#{post.comments.size} comments", post_path(post)) %>
       </span>
     </small>
   </div>
 </div>
<% end %>