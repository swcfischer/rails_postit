
<div class="row">
 <div class="span8 well">
   <% post.categories.each do |category| %>
    <span class="badge"><%= link_to category.name, category_path(category) %></span>
   <% end %>
   <h4><%= link_to post.title, http_fix(post.url) %></h4>
   <p><%= post.description %></p>
   <% if logged_in? %>
    <p>(<%= link_to 'Edit post', edit_post_path(post.id) %>)</p>
   <% end %>
   <p>
     <span class="quiet">posted by</span> <%= post.user.username  %>
   </p>
   <small>
     <span>
       <%= link_to("#{post.comments.size} comments", post_path(post)) %>
     </span>
   </small>
 </div>
</div>
